<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MainController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 20;">
    <Canvas fx:id="canvas" width="256" height="256"/>
    <Button fx:id="loadImageButton" text="Cargar Imagen" onAction="#onLoadImage"/>
    <Button fx:id="predictButton" text="Predecir Etapa" onAction="#onPredict"/>
    <Label fx:id="resultLabel" text="Resultado..."/>
</VBox>
